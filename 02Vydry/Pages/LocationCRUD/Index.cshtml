@page
@model _02Vydry.Pages.LocationCRUD.IndexModel

@{
    ViewData["Title"] = "Location DB";
}

<h1>Location DB</h1>

<p>
    <a asp-page="Create">Create New Location</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                Area
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Location) {
        <tr>
            <td>
                @item.Area
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LocationID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LocationID">Details</a> |
                @if (item.Places.Count == 0)
                {
                    <a asp-page="./Delete" asp-route-id="@item.LocationID">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
