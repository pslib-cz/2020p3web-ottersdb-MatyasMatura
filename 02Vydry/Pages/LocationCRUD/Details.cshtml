@page
@model _02Vydry.Pages.LocationCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Location Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Area
        </dt>
        <dd class="col-sm-10">
            @Model.Location.Area
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Location.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Location.LocationID">Edit</a> |
    <a asp-page="./Index">Back to List of Locations</a>
</div>
