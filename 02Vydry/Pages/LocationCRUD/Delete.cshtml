@page
@model _02Vydry.Pages.LocationCRUD.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Location</h1>

<h3>Are you sure you want to delete this Location?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Area
        </dt>
        <dd class="col-sm-10">
            @Model.Location.Area
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Location.Name
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Location.LocationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List of Locations</a>
    </form>
</div>
