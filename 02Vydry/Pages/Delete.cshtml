@page
@model _02Vydry.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Vydra</h1>

<h3>Are you sure you want to delete this Vydra?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Vydra.Name
        </dd>
        <dt class="col-sm-2">
            Color
        </dt>
        <dd class="col-sm-10">
            @Model.Vydra.Color
        </dd>
        <dt class="col-sm-2">
            Mother
        </dt>
        <dd class="col-sm-10">
            @(Model.Vydra.Mother?.Name ?? "neznámá")
        </dd>
        <dt class="col-sm-2">
            Place
        </dt>
        <dd class="col-sm-10">
            @Model.Vydra.Place.Name
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Vydra.Location.Name
        </dd>
        <dt class="col-sm-2">
            Founder
        </dt>
        <dd class="col-sm-10">
            @Model.Vydra.founderID
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Vydra.TattooID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List of Vydras</a>
    </form>
</div>
