@page
@model _02Vydry.Pages.PlaceCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Place</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="PlaceData.OriginalName" value="@Model.Place.Name" />
            <input type="hidden" asp-for="PlaceData.OriginalLocationId" value="@Model.Place.LocationId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaceData.Name" class="control-label"></label>
                <input asp-for="PlaceData.Name" value="@Model.Place.Name" class="form-control" />
                <span asp-validation-for="PlaceData.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceData.LocationId" class="control-label">Location Name</label>
                <select asp-for="PlaceData.LocationId" class="form-control" asp-items="Model.LocationName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List of Places</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
