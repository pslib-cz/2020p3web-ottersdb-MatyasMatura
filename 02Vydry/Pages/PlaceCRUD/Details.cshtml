@page
@model _02Vydry.Pages.PlaceCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Place Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Place Name
        </dt>
        <dd class="col-sm-10">
            @Model.Place.Name
        </dd>
        <dt class="col-sm-2">
            Location Name
        </dt>
        <dd class="col-sm-10">
            @Model.Place.Location.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Place.Name">Edit</a> |
    <a asp-page="./Index">Back to List of Places</a>
</div>
