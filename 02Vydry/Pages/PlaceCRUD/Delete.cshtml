@page
@model _02Vydry.Pages.PlaceCRUD.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Place</h1>

<h3>Are you sure you want to delete this Place?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Place Name
        </dt>
        <dd class="col-sm-10">
            @Model.Place.Name
        </dd>
        <dt class="col-sm-2">
            Location Name
        </dt>
        <dd class="col-sm-10">
            @Model.Place.Location.Name
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Place.Name" />
        <input type="hidden" asp-for="Place.Location.LocationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List of Places</a>
    </form>
</div>
